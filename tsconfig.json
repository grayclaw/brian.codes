{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "types": [
            "@testing-library/jest-dom",
            "@testing-library/react",
            "@testing-library/user-event",
            "jest",
            "node",
            "react",
            "react-dom"
        ],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@components": ["./app/components"],
            "@components/*": ["./app/components/*"],
            "@constants": ["./constants"],
            "@hooks": ["./hooks"],
            "@hooks/*": ["./hooks/*"],
            "@providers": ["./providers"],
            "@providers/*": ["./providers/*"],
            "@types": ["./types"],
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "postcss.config.js",
        "jest.setup.ts"
    ],
    "exclude": ["node_modules", ".pnpm"]
}
