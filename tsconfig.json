{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".", // Set the base directory to the root of the project
        "paths": {
            "@constants": ["./constants"],
            "@hooks": ["./hooks"],
            "@hooks/*": ["./hooks/*"],
            "@types": ["./types"],
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "eslint.config.ts"],
    "exclude": ["node_modules"]
}
