{
    "printWidth": 100,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "importOrder": [
        "^@emotion(.*)$",
        "^@components(.*)",
        "^@constants(.*)",
        "^@hooks(.*)$",
        "^@providers(.*)$",
        "^@types(.*)$",
        "^@utils(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ]
}